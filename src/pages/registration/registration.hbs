<div class="container">
    <Form class="registration-form {{#if isLogin}}registration-form__login{{/if}}">
        <div class="header">Регистрация</div>
        {{#if isRegistration}}
            {{#each (registrationFields)}}
                {{> Input}}
            {{/each}}
            <div class="buttons">
                {{> Button label="Зарегистрироваться" type="primary" }}
                {{> Button label="Войти" type="link" }}
            </div>
        {{/if}}

        {{#if isLogin}}
            {{#each (loginFields)}}
                {{> Input}}
            {{/each}}
            <div class="buttons">
                {{> Button label="Авторизоваться" type="primary" }}
                {{> Button label="Нет аккаунта?" type="link" }}
            </div>
        {{/if}}
    </Form>
</div>
